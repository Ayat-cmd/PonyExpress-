<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@color/colorAccentBG"
>
    <pro.midev.ponyexpress.ui.views.ToolbarView
            android:id="@+id/vToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNotifications"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="gone"
            android:paddingTop="16dp"
            />
    <FrameLayout
            android:id="@+id/vgNotAuth"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_splash_back"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#90FFFFFF"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextBlack40"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/orders_not_auth"
                    android:layout_margin="40dp"
                    android:layout_marginTop="4dp"
            />
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAuth"
                    android:layout_marginTop="-24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Авторизоваться"
                    style="@style/ButtonEmpty"
            />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>